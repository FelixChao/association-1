<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.lvjp.association.mapper.AssociationMapper">

    <resultMap id="associationInfo" type="top.lvjp.association.dto.AssociationInfo" autoMapping="true">
        <id property="associationId" column="association_id" />
        <result property="associationName" column="association_name" />
        <result property="associationDescription" column="association_description" />
        <result property="associationLogo" column="association_logo" />
    </resultMap>
    
    <select id="selectAssociationById" parameterType="Integer" resultMap="associationInfo">
        select association_id,association_name,association_description,association_logo from association where association_id = #{id}
    </select>

    <select id="selectPopAssociation" resultMap="associationInfo">
        select association_id,association_name,association_logo from association order by apply_number limit 10
    </select>

    <select id="selectAssociationByCategory" parameterType="String" resultMap="associationInfo">
        select association_id,association_name,association_logo from association where association_category = #{category}
    </select>

</mapper>