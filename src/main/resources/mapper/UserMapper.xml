<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.lvjp.association.mapper.UserMapper">

    <resultMap id="user" type="top.lvjp.association.entity.User">
        <result column="user_id" property="userId" />
        <result column="user_name" property="userName" />
        <result column="user_password" property="userPassword" />
        <result column="user_type" property="userType" />
    </resultMap>

    <select id="selectUserByName" parameterType="String" resultMap="user">
        select user_id,user_name,user_password,user_type
        from user
        where user_name = #{user_name}
    </select>

    <select id="selectUserById" parameterType="integer" resultMap="user">
        select user_id,user_name,user_password,user_type
        from user
        where user_id = #{id}
    </select>

    <select id="selectUser" parameterType="integer" resultMap="user">
        select user_id,user_name,user_password,user_type
        from user
    </select>

    <!--<select id="insertUser" parameterType="integer" resultType="top.lvjp.association.entity.User">-->
    <insert id="insertUser" parameterType="top.lvjp.association.entity.User">
        insert user (user_name,user_password,user_type)
        values (#{userName},#{userPassword},#{userType})
    </insert>

    <update id="updateUser" parameterType="top.lvjp.association.entity.User" >
        update user
        set user_name = #{userName},user_password = #{userPassword},user_type = #{userType}
        where user_id = #{userId}
    </update>

    <delete id="deleteUserById" parameterType="integer">
        delete from user
        where user_id = #{id}
    </delete>




</mapper>